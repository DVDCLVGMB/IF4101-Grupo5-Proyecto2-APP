<Window x:Class="Steady_Management_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Steady_Management_App"
        Title="Steady Management App" Height="600" Width="900">

    <Window.Resources>
        <!-- ❶  Estilo global para todos los MenuItem  -->
        <Style TargetType="MenuItem">
            <!-- separa los ítems 6 px arriba y abajo -->
            <Setter Property="Margin"     Value="0,6,0,6"/>
            <!-- relleno interno opcional -->
            <Setter Property="Padding"    Value="10,4"/>
            <!-- tamaño de letra mayor -->
            <Setter Property="FontSize"   Value="16"/>
            <!-- color si también quieres cambiarlo -->
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Barra lateral del menu principal -->
        <StackPanel Background="#2E333A" Width="230" Orientation="Vertical" HorizontalAlignment="Left">
            <!-- Título del menú -->
            <Grid Height="50" VerticalAlignment="Top" Margin="0,30,0,0">
                <Border Background="#D61734" Height="25" CornerRadius="3,0,0,3" Width="6" VerticalAlignment="Center" HorizontalAlignment="Right" />
                <TextBlock Text="Steady Management App" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Grid>

            <!-- Menú principal -->
            <Menu Background="Transparent" Margin="0,20,0,0">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>

                <!-- Cliente -->
                <MenuItem Header="Cliente" Foreground="White" Click="ConsultarClientes_Click"> </MenuItem>

                <!-- Departamento -->
                <MenuItem Header="Departamento" Foreground="White" Click="ConsultarDepartamentos_Click"></MenuItem>

                <!-- Empleado -->
                <MenuItem Header="Empleado" Foreground="White" Click="ConsultarEmpleados_Click"></MenuItem>

                <!-- Orden -->
                <MenuItem Header="Orden" Foreground="White" Click="ConsultarOrdenes_Click"></MenuItem>

                <!-- Producto-->
                <MenuItem Header="Producto" Foreground="White" Click="ConsultarProductos_Click"></MenuItem>

                <!-- Cerrar Sesión-->
                <MenuItem Header="Cerrar Sesión" Foreground="White" Click="Salir_Click"></MenuItem>

            </Menu>
        </StackPanel>

        <!-- Contenido principal -->
        <ContentControl x:Name="MainContent" Margin="230,0,0,0"/>
    </Grid>
</Window>
