<UserControl x:Class="Steady_Management_App.Views.EmployeesListUcView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FFF5F5F5">

    <UserControl.Resources>

        <!-- Botón moderno -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1C2331"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2E3A4D"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF121821"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Botones pequeños con íconos -->
        <Style x:Key="ModernIconButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF3F51B5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF3F51B5"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ListView Items -->
        <Style TargetType="ListViewItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#FFF5F5F5"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFDFE8F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para encabezados de GridView -->
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="#FF1C2331"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10 0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="0">
        <Border CornerRadius="8" Background="White" Margin="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>

            <DockPanel>

                <!-- Header -->
                <Border DockPanel.Dock="Top" Background="#FF1C2331" Height="60" CornerRadius="8,8,0,0" Padding="20 0">
                    <DockPanel LastChildFill="True" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Path Data="M12,12c2.21,0 4-1.79 4-4s-1.79-4-4-4-4,1.79-4,4 1.79,4 4,4zm0,2c-2.67,0-8,1.34-8,4v2h16v-2c0-2.66-5.33-4-8-4z"
                                  Fill="White" Width="24" Height="24" Margin="0 0 10 0"/>
                            <TextBlock Text="Gestión de Empleados" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button Content="Agregar Empleado" Style="{StaticResource ModernButton}"
                                Click="AddEmployee_Click" HorizontalAlignment="Right">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="16" Margin="0 0 5 0"/>
                                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </DockPanel>
                </Border>

                <!-- Línea separadora -->
                <Rectangle Height="1" Fill="White" DockPanel.Dock="Top"/>

                <!-- Lista con GridView -->
                <ListView x:Name="EmployeesListView"
          Margin="10"
          Background="White"
          BorderThickness="0"
          AlternationCount="2"
          SelectionMode="Single"
          SizeChanged="EmployeesListView_SizeChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding EmployeeName}" />
                            <GridViewColumn Header="Apellido" DisplayMemberBinding="{Binding EmployeeSurname}" />
                            <GridViewColumn Header="Extensión" DisplayMemberBinding="{Binding Extension}" />
                            <GridViewColumn Header="Teléfono" DisplayMemberBinding="{Binding WorkPhoneNumber}" />
                            <GridViewColumn Header="Departamento" DisplayMemberBinding="{Binding DepartmentName}" />
                            <GridViewColumn Header="Rol" DisplayMemberBinding="{Binding RoleName}" />
                            <GridViewColumn Header="Acciones">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Style="{StaticResource ModernIconButton}" ToolTip="Editar"
                                    Click="EditEmployee_Click" Tag="{Binding}" Margin="0,0,5,0">
                                                <TextBlock Text="&#xE70F;"/>
                                                <!-- Icono de lápiz -->
                                            </Button>
                                            <Button Style="{StaticResource ModernIconButton}" ToolTip="Eliminar"
                                    Click="DeleteEmployee_Click" Tag="{Binding}">
                                                <TextBlock Text="&#xE74D;"/>
                                                <!-- Icono de basura -->
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

            </DockPanel>
        </Border>
    </Grid>
</UserControl>