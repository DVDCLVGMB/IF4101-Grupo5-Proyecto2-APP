<Window x:Class="Steady_Management_App.Views.OrderClientSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Steady_Management_App.Views"
        mc:Ignorable="d"
        Title="OrderClientSelectWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Botones de acción arriba -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Sleccionar" Click="Agregar_Click" Margin="5"/>
        </StackPanel>

        <!-- Tabla de clientes -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Clients}"
                  SelectedItem="{Binding SelectedClient}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ClientId}" Width="Auto"/>
                <DataGridTextColumn Header="Nombre Empresa" Binding="{Binding CompanyName}" Width="*"/>
                <DataGridTextColumn Header="Nombre Contacto" Binding="{Binding ContactName}" Width="*"/>
                <DataGridTextColumn Header="Apellido" Binding="{Binding ContactSurname}" Width="*"/>
                <DataGridTextColumn Header="Teléfono" Binding="{Binding ClientPhoneNumber}" Width="*"/>
                <DataGridTextColumn Header="Dirección" Binding="{Binding ClientAddress}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones de selección -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Seleccionar Cliente" Width="140" Click="Select_Click" Margin="5"/>
            <Button Content="Cancelar" Width="100" Click="Cancel_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
