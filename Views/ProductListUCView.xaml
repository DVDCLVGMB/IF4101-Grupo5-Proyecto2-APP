<UserControl x:Class="Steady_Management_App.Views.ProductListUCView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Steady_Management_App.ViewModels" 
             xmlns:conv="clr-namespace:Steady_Management_App.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:NullToBoolConverter   x:Key="NullToBool"/>
        <conv:InverseBoolConverter  x:Key="InverseBool"/>
    </UserControl.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0"
              ItemsSource="{Binding Products}"
              SelectedItem="{Binding SelectedProduct}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              Margin="0,0,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"       Binding="{Binding ProductId}"   Width="100"/>
                <DataGridTextColumn Header="Nombre"   Binding="{Binding ProductName}" Width="350" />
                <DataGridTextColumn Header="Precio"   Binding="{Binding Price}"       Width="150"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding CategoryId}"  Width="182"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Nuevo"  Width="75" Command="{Binding NewCommand}" />
            <Button Content="Editar" Width="75" Command="{Binding EditCommand}"
              IsEnabled="{Binding SelectedProduct, Converter={StaticResource NullToBool}}" />
            <Button Content="Borrar" Width="75" Command="{Binding DeleteCommand}"
              IsEnabled="{Binding SelectedProduct, Converter={StaticResource NullToBool}}" />
        </StackPanel>
    </Grid>
</UserControl>
